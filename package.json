{
  "name": "minibase-create-plugin",
  "version": "1.0.3",
  "description": "Utility for [base][] and [minibase][]/[dush][] for creating plugins more easily",
  "repository": "tunnckoCore/minibase-create-plugin",
  "author": "Charlike Mike Reagent <@tunnckoCore> (https://i.am.charlike.online)",
  "precommit.silent": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard index.js test.js --fix --verbose",
    "test": "npm-run-all -s lint test:*",
    "test:api": "nyc --reporter lcov node test.js",
    "test:report": "nyc report",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "git": "npm-run-all -s git:*",
    "git:add": "git add --all",
    "git:cz": "git-cz",
    "commit": "npm-run-all -s test git"
  },
  "dependencies": {
    "dush-better-use": "^1.1.0",
    "mixin-deep": "^1.2.0"
  },
  "devDependencies": {
    "commitizen": "~2.7.0",
    "cz-conventional-changelog": "1.1.5",
    "dush": "^3.0.4",
    "mukla": "^0.4.9",
    "npm-run-all": "~3.1.2",
    "nyc": "^10.2.0",
    "pre-commit": "^1.2.2",
    "standard": "^9.0.0",
    "standard-version": "^4.0.0"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "base",
    "create",
    "create-plugin",
    "dush",
    "helper",
    "minibase",
    "plugin",
    "plugins",
    "util",
    "utility"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "check-coverage": true,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "lines": 100
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "dush",
        "dush-promise",
        "dush-no-chaining",
        "dush-options",
        "dush-better-use",
        "minibase-is-registered",
        "minibase",
        "base",
        "dush-tap-report",
        "dush-router"
      ],
      "highlight": "minibase"
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "base",
      "charlike",
      "commitizen",
      "dush",
      "minibase",
      "standard-version",
      "verb",
      "verb-generate-readme"
    ]
  }
}
